<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- DONE: Add necessary styles -->
    <style name="VoterInfoLinks">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/margin_double</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="EditText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

</resources>
